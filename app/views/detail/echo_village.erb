<div class = "container">
    
    
    <div class = "container">
        <div id = a>
            <div class="row thumbnail backgroundcolor">
                <div class="panel-heading col-md-12" style="box-shadow: -1px -1px 2px inset;background-color: #42925d;">
                <div class="row">
                  <div id = "a" style="padding-bottom : 0px">
                  <div class = "col-md-4">
                    <span class = "detailtitle"><%=@echo_facility_name%></span>
                    <span style = "color : #FFF">  산촌생태마을  </span>
                  </div>
                  <div class = "col-md-2 col-md-offset-6">
                    <span class=" glyphicon glyphicon-heart-empty pcitogram" id="like" onclick="like_click('<%=@echo_facility_name%>','echo_village')"></span>
                  </div>
                  
                </div>
                  
                </div>
                <div class="row">
                   <div>
                  <span class = "detailstatus">조회수 : <%=@view_count%> 찜한수 : <span id="like_count"><%=@like%></span> </span>
                </div>
                  
                </div>
                </div>
                

                
                <div id = "b">
                <div class="row rowpadding rowpaddingplus">
                    <div class="row">
                        <div class="col-sm-4 thumbnail">
                          <img id = mainpic src=<%=@main_pic%> alt="rss feed" />
                        </div>
                        <div class="col-sm-6" style = "padding-left : 50px">
                          <ul class="a liicon">
                          <br>
                          <li class = "liicon">
                            <span class = "p_detail" style = "font-weight : bold">이름 :</span>
                            <span class = "p_detail"><%=@echo_facility_name%></span>
                          </li>
                          <li class = "liicon">
                            <span class = "p_detail" style = "font-weight : bold">주소 : </span>
                            <span class = "p_detail"><%=@echo_address%></span>
                          </li>
                          </ul>
                        </div>
                      
                    </div>
                    
                    <div class="row col-md-offset-1 col-md-10">
                                  <span class = "p_detail" style = "font-weight : bold">운영 일자 :</span>
                                  <table class="table table-striped">
                                      <thead>
                                        <tr class="info">
                                          <th class="col-md-1">1월</th>
                                          <th class="col-md-1">2월</th>
